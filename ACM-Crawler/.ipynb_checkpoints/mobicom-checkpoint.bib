@inproceedings{10.1145/3366486.3366532,
	title        = {Virtual MIMO Transmissions for Underwater Acoustic Communications with Moving Platforms},
	author       = {Fu, Qiang and Song, Aijun and Tao, Qiuyang and Zhang, Fumin and Pan, Miao},
	year         = 2019,
	booktitle    = {Proceedings of the International Conference on Underwater Networks &amp; Systems},
