}
@inproceedings{10.1145/3241539.3241586,
	title        = {Keeping the Internet Open with an Open-Source Virtual Assistant},
	author       = {Lam, Monica S.},
	year         = 2018,
	booktitle    = {Proceedings of the 24th Annual International Conference on Mobile Computing and Networking},
	location     = {New Delhi, India},
	publisher    = {Association for Computing Machinery},
