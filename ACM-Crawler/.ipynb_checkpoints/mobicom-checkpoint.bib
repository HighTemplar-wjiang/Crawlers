@inproceedings{10.1145/3416012.3424623,
	title        = {The Impact of COVID-19 Confinement on Regional Mobility of Spatial-Temporal Social Networks},
	author       = {Aljeri, Munairah},
	year         = 2020,
	booktitle    = {Proceedings of the 18th ACM Symposium on Mobility Management and Wireless Access},
	location     = {Alicante, Spain},
	publisher    = {Association for Computing Machinery},
