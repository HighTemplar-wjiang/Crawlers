@inproceedings{10.1145/3416012.3424625,
	title        = {WiMove: Toward Infrastructure Mobility in MmWave WiFi},
	author       = {Jian, Yubing and Agarwal, Mohit and Venkateswaran, Shyam Krishnan and Liu, Yuchen and Blough, Douglas M. and Sivakumar, Raghupathy},
	year         = 2020,
	booktitle    = {Proceedings of the 18th ACM Symposium on Mobility Management and Wireless Access},
