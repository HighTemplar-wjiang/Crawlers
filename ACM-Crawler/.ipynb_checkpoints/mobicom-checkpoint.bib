@inproceedings{10.1145/3131944.3131950,
	title        = {Vulnerable Road User Protection through Intuitive Visual Cue on Smartphones},
	author       = {Kim, Taeho and Han, Wongoo and Kim, Hyogon and Park, Yongtae},
	year         = 2017,
	booktitle    = {Proceedings of the 2nd ACM International Workshop on Smart, Autonomous, and Connected Vehicular Systems and Services},
