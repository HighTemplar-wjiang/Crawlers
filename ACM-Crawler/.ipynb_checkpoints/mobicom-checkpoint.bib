	keywords     = {terahertz communication, terahertz testbed, OFDM in terahertz}
}
@inproceedings{10.1145/3412060.3418431,
	title        = {An Experimental MmWave Channel Model for UAV-to-UAV Communications},
	author       = {Polese, Michele and Bertizzolo, Lorenzo and Bonati, Leonardo and Gosain, Abhimanyu and Melodia, Tommaso},
