@inproceedings{10.1145/3130242.3130247,
	title        = {Neyman-Pearson Codebook Design for Beam Alignment in Millimeter-Wave Networks},
	author       = {Hussain, Muddassar and Love, David J. and Michelusi, Nicolo},
	year         = 2017,
	booktitle    = {Proceedings of the 1st ACM Workshop on Millimeter-Wave Networks and Sensing Systems 2017},
	location     = {Snowbird, Utah, USA},
	publisher    = {Association for Computing Machinery},
	address      = {New York, NY, USA},
	series       = {mmNets '17},
	pages        = {17â22},
	doi          = {10.1145/3130242.3130247},
	isbn         = 9781450351430,
	url          = {https://doi.org/10.1145/3130242.3130247},
	abstract     = {Millimeter wave systems require narrow beam communication to achieve high throughput. To this end, beam alignment is achieved via a proper beam sensing protocol, which specifies how to allocate amplitude and phase at each antenna array element (a codeword) to sense the mobile user's position, through appropriate beam pointing. However, beam imperfections -- such as the presence of side-lobes -- and noise may cause errors in the detection process. Thus, correct alignment between transmitter and receiver may not be achieved. Therefore, it is of great importance to design the sensing codebook to attain optimal detection performance. In this paper, a Neyman-Pearson codebook design is proposed. The sensing codeword is optimized so as to minimize the mis-detection probability, under false-alarm, power and hybrid beamforming constraints. Due to the intractability of the problem, a worst-case relaxation is carried out. It is shown that the dual problem can be recast as a semidefinite program, and the optimal codebook is the principle eigenvector of a weighted array response matrix. It is shown numerically that the proposed design outperforms a state-of-the art algorithm, with improvement of up to 33% in detection performance.},
	numpages     = 6,
	keywords     = {beam alignment, millimeter wave, Neyman-Pearson detector}
}
@inproceedings{10.1145/3130242.3130246,
	title        = {Experimental Feasibility Study of Motion Sensor-Aided Mm-Wave Beam Tracking},
	author       = {Arnold, Julian and Simi\'{c}, Ljiljana and M\"{a}h\"{o}nen, Petri},
	year         = 2017,
	booktitle    = {Proceedings of the 1st ACM Workshop on Millimeter-Wave Networks and Sensing Systems 2017},
	location     = {Snowbird, Utah, USA},
	publisher    = {Association for Computing Machinery},
	address      = {New York, NY, USA},
	series       = {mmNets '17},
	pages        = {5â10},
	doi          = {10.1145/3130242.3130246},
	isbn         = 9781450351430,
	url          = {https://doi.org/10.1145/3130242.3130246},
	abstract     = {The spectrum-rich millimeter-wave (mm-wave) bands are being considered for next generation mobile networks. However, due to the high path loss at these frequencies, mm-wave systems rely on highly directional antennas, making precise antenna alignment a major issue. To provide seamless connectivity for mobile users, efficient beam tracking is thus crucial. In this paper we propose using motion sensor data to track small-scale rotational user motion and to thus correct mm-wave antenna misalignment at the mobile station (MS). To this end, we study in detail the characteristics of typical MS rotational motion using an Android app and mm-wave urban measurement data. We thereby evaluate the effectiveness of MS-based beam tracking, in terms of link stability and link quality, and derive practical engineering bounds on tracking delay and sensor accuracy. We show that, in order to make motion sensor-aided beam tracking beneficial, the tracking delay and sensor error must not exceed 30 ms and 1.2Â°, respectively, for our 10Â° antenna system. Although these requirements are within the capabilities of state-of-the-art MEMS chips, they cannot be guaranteed by the Android sensor API, suggesting that direct low-level access to the sensors should be provided to support mm-wave beam tracking.},
	numpages     = 6,
	keywords     = {mm-wave, beam tracking, motion sensors}
}
@inproceedings{10.1145/3477081.3481674,
	title        = {A Preliminary Assessment of Midhaul Links at 140 GHz Using Ray-Tracing},
	author       = {Chintareddy, Sravan Reddy and Mezzavilla, Marco and Rangan, Sundeep and Hashemi, Morteza},
	year         = 2021,
	booktitle    = {Proceedings of the 5th ACM Workshop on Millimeter-Wave and Terahertz Networks and Sensing Systems},
	location     = {New Orleans, Louisiana},
	publisher    = {Association for Computing Machinery},
	address      = {New York, NY, USA},
	series       = {mmNets '21},
	pages        = {25â30},
	doi          = {10.1145/3477081.3481674},
	isbn         = 9781450386999,
	url          = {https://doi.org/10.1145/3477081.3481674},
	abstract     = {The ever-growing demand for mobile data necessitates a transport network architecture that can withstand the 5G-and-beyond multi-Gbps traffic requirements. To cater for such unprecedented demand, studies are being conducted to incorporate TeraHertz (THz) communications in future mobile networks. In this paper, we consider an urban environment and evaluate the feasibility of THz wireless midhaul links for the transport networks between the Central Units (CU) and Distributed Units (DU) in a disaggregated 5G network architecture with functional splits. Our goal is to study the feasibility of midhaul links at 140 GHz by minimizing the number of required CUs to serve all the DUs. To this end, we define several policies for selecting CU and DU nodes in order to determine the peak data rate that can be supported over each link between a CU and DU. Our numerical results based on ray-tracing suggest that wireless links at 140 GHz with 3GPP option 2 as High Layer Split (HLS) represents a promising technology for midhaul transport networks.},
