@inproceedings{10.1145/3097620.3097622,
	title        = {A NEAT Approach to Mobile Communication},
	author       = {Hurtig, Per and Alfredsson, Stefan and Brunstrom, Anna and Evensen, Kristian and Grinnemo, Karl-Johan and Hansen, Audun Fosselie and Rozensztrauch, Tomasz},
