@inproceedings{10.1145/3264492.3264506,
	title        = {A 128-Element Dual-Polarized Software-Defined Phased Array Radio for Mm-Wave 5G Experimentation},
	author       = {Sadhu, Bodhisatwa and Paidimarri, Arun and Ferriss, Mark and Yeck, Mark and Gu, Xiaoxiong and Valdes-Garcia, Alberto},
	year         = 2018,
	booktitle    = {Proceedings of the 2nd ACM Workshop on Millimeter Wave Networks and Sensing Systems},
