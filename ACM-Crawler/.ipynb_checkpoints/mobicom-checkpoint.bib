@inproceedings{10.1145/3132062.3132079,
	title        = {Towards a Formal Analysis of MQtt Protocol in the Context of Communicating Vehicles},
	author       = {Chouali, Samir and Boukerche, Azzedine and Mostefaoui, Ahmed},
	year         = 2017,
