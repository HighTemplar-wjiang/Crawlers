@inproceedings{10.1145/3349622.3355448,
	title        = {A Framework for Queryable Video Analysis: A Case-Study on Transport Modelling},
	author       = {Bugeja, Mark and Dingli, Alexiei and Attard, Maria and Seychell, Dylan},
