@inproceedings{10.1145/3491315.3491333,
	title        = {A Study of Mapping Sequences Spread Spectrum Underwater Acoustic Communications Using Gold Codes},
	author       = {Li, Yan and Liu, Biao and Jia, Ning and Huang, Jianchun and Xiao, Dong and Guo, Shengming},
