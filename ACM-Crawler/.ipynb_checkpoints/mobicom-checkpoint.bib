}
@inproceedings{10.1145/3416012.3424624,
	title        = {Bridging Predictive Analytics and Mobile Crowdsensing for Future Risk Maps of Communities Against COVID-19},
	author       = {Kielienyu, Sedevizo and Kantarci, Burak and Turgut, Damla and Khan, Shahzad},
	year         = 2020,
	booktitle    = {Proceedings of the 18th ACM Symposium on Mobility Management and Wireless Access},
	location     = {Alicante, Spain},
