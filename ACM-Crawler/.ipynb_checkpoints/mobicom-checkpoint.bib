	numpages     = 6,
	keywords     = {underwater acoustic communications, precoded OFDM, PAPR}
}
@inproceedings{10.1145/3291940.3291970,
	title        = {Robust TDA-MAC for Practical Underwater Sensor Network Deployment: Lessons from USMART Sea Trials},
	author       = {Morozs, Nils and Mitchell, Paul D. and Zakharov, Yuriy and Mourya, Rahul and Petillot, Yvan R. and Gibney, Tyler and Dragone, Mauro and Sherlock, Benjamin and Neasham, Jeffrey A. and Tsimenidis, Charalampos C. and Sayed, Mohammed E. and McConnell, Alistair C. and Aracri, Simona and Stokes, Adam A.},
