	keywords     = {modeling, NS3, unlicensed spectrum, network simulator 3, TVWS, DSA, channel assignment, simulated annealing, cognitive radio, wireless mesh networks, simulation, optimisation, WMN}
}
@inproceedings{10.1145/3479241.3486694,
	title        = {Social Groups Based Content Caching in Wireless Networks},
	author       = {Mustafa, Nimrah and Khan, Imdad Ullah and Khan, Muhammad Asad and Uzmi, Zartash Afzal},
	year         = 2021,
	booktitle    = {Proceedings of the 19th ACM International Symposium on Mobility Management and Wireless Access},
	location     = {Alicante, Spain},
