}
@inproceedings{10.1145/3148675.3152759,
	title        = {Multimodal Underwater Networks: Recent Advances and a Look Ahead},
	author       = {Campagnaro, Filippo and Francescon, Roberto and Casari, Paolo and Diamant, Roee and Zorzi, Michele},
	year         = 2017,
	booktitle    = {Proceedings of the International Conference on Underwater Networks &amp; Systems},
	location     = {Halifax, NS, Canada},
