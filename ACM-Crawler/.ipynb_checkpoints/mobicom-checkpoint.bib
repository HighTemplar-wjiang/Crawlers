}
@inproceedings{10.1145/3300061.3343376,
	title        = {Demo: Wireless LAN Emulator Using Wireless Network Tap Device for Testing a Vehicular Network System},
	author       = {Kato, Arata and Takai, Mineo and Ishihara, Susumu},
