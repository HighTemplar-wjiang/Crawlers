}
@inproceedings{10.1145/3117811.3117828,
	title        = {FlipTracer: Practical Parallel Decoding for Backscatter Communication},
	author       = {Jin, Meng and He, Yuan and Meng, Xin and Zheng, Yilun and Fang, Dingyi and Chen, Xiaojiang},
	year         = 2017,
	booktitle    = {Proceedings of the 23rd Annual International Conference on Mobile Computing and Networking},
