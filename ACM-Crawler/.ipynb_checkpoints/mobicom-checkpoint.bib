	numpages     = 13,
	keywords     = {polarization-based differential reception, infrastructure-to-vehicle networking, visible light backscatter communication}
}
@inproceedings{10.1145/3372224.3380881,
	title        = {EagleEye: Wearable Camera-Based Person Identification in Crowded Urban Spaces},
	author       = {Yi, Juheon and Choi, Sunghyun and Lee, Youngki},
