	keywords     = {respiration monitoring, wireless sensor network, signal processing}
}
@inproceedings{10.1145/3241539.3267720,
	title        = {E-Witness: Preserve and Prove Forensic Soundness of Digital Evidence},
	author       = {Samanta, Priyanka and Jain, Shweta},
	year         = 2018,
	booktitle    = {Proceedings of the 24th Annual International Conference on Mobile Computing and Networking},
