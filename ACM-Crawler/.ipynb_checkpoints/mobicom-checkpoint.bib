@inproceedings{10.1145/3477081.3481677,
	title        = {Full-Stack Comparison of Channel Models for Networks above 100 GHz in an Indoor Scenario},
	author       = {Gargari, Amir Ashtari and Polese, Michele and Zorzi, Michele},
