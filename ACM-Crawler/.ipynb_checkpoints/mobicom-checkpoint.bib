@inproceedings{10.1145/3491315.3491331,
	title        = {Modeling Acoustic Telemetry Detection Ranges in a Shallow Coastal Environment},
	author       = {McQuarrie, Frank and Brock Woodson, Clifton and R. Edwards, Catherine},
