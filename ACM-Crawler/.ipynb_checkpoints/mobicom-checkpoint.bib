@inproceedings{10.1145/3131473.3131481,
	title        = {LTESS-Track: A Precise and Fast Frequency Offset Estimation for Low-Cost SDR Platforms},
	author       = {Calvo-Palomino, Roberto and Ricciato, Fabio and Giustiniano, Domenico and Lenders, Vincent},
	year         = 2017,
	booktitle    = {Proceedings of the 11th Workshop on Wireless Network Testbeds, Experimental Evaluation &amp; CHaracterization},
