@inproceedings{10.1145/3241539.3241580,
	title        = {Ghostbuster: Detecting the Presence of Hidden Eavesdroppers},
	author       = {Chaman, Anadi and Wang, Jiaming and Sun, Jiachen and Hassanieh, Haitham and Roy Choudhury, Romit},
