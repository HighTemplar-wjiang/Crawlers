	keywords     = {mobile social networks, caching, wireless networks}
}
@inproceedings{10.1145/3479241.3486691,
	title        = {MOTIVE - Time-Optimized Contextual Information Flow On Unmanned Vehicles},
	author       = {Gerakos, Kostantinos and Panagidi, Kakia and Andreou, Charalampos and Zampouras, Dimitris},
	year         = 2021,
	booktitle    = {Proceedings of the 19th ACM International Symposium on Mobility Management and Wireless Access},
	location     = {Alicante, Spain},
	publisher    = {Association for Computing Machinery},
	address      = {New York, NY, USA},
