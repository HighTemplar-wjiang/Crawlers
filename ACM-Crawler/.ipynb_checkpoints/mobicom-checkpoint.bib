@inproceedings{10.1145/3264492.3264501,
	title        = {Mm-Wave Radar Based Gesture Recognition: Development and Evaluation of a Low-Power, Low-Complexity System},
	author       = {Patra, Avishek and Geuer, Philipp and Munari, Andrea and M\"{a}h\"{o}nen, Petri},
