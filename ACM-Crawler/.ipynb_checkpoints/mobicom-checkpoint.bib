@inproceedings{10.1145/3477081.3481671,
	title        = {A Case for OFDM in Ultra-Broadband Terahertz Communication: An Experimental Approach},
	author       = {Chakraborty, Shuvam and Parisi, Claire and Saha, Dola and Thawdar, Ngwe},
	year         = 2021,
