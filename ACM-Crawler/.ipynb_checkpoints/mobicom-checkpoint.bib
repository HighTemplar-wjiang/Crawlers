@inproceedings{10.1145/3291940.3291972,
	title        = {Underwater Sound Speed Inversion by Joint Artificial Neural Network and Ray Theory},
	author       = {Huang, Wei and Li, Deshi and Jiang, Peng},
	year         = 2018,
	booktitle    = {Proceedings of the Thirteenth ACM International Conference on Underwater Networks &amp; Systems},
	location     = {Shenzhen, China},
	publisher    = {Association for Computing Machinery},
