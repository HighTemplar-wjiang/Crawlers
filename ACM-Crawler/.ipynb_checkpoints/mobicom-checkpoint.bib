@inproceedings{10.1145/3345770.3356743,
	title        = {Are We Still Friends? Evaluating Tie Persistence in Mobility Traces},
	author       = {Domingues, Augusto C. S. A. and Santana, Henrique de Souza and Silva, Fabr\'{\i}cio A. and Vaz de Melo, Pedro O. S. and Loureiro, Antonio A. F.},
