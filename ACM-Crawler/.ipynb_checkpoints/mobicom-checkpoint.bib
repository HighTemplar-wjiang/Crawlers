@inproceedings{10.1145/3491315.3491354,
	title        = {Adaptive Switching for Multimodal Underwater Acoustic Communications Based on Reinforcement Learning},
	author       = {Fan, Cheng and Wang, Zhaohui},
	year         = 2021,
	booktitle    = {The 15th International Conference on Underwater Networks &amp; Systems},
	location     = {Shenzhen, Guangdong, China},
