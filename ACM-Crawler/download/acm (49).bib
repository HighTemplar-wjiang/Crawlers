}

@inproceedings{10.1145/3411763.3451629,
author = {Huang, Yu-Ning and Zhao, Siyan and Rivera, Michael L and Hong, Jason I. and Kraut, Robert E},
title = {Predicting Well-Being Using Short Ecological Momentary Audio Recordings},
year = {2021},
