@inproceedings{10.1145/3411763.3451614,
author = {Zhu, Howe Yuan and Magsino, Eirene Margaret and Hamim, Sanjid Mahmood and Lin, Chin-Teng and Chen, Hsiang-Ting},
title = {A Drone Nearly Hit Me! A Reflection on the Human Factors of Drone Collisions},
