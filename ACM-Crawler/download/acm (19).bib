}

@inproceedings{10.1145/3491102.3502122,
author = {Erete, Sheena and Dickinson, Jessa and Gonzalez, Alejandra C. and Rankin, Yolanda A.},
title = {Unpacking the Complexities of Community-Led Violence Prevention Work},
year = {2022},
isbn = {9781450391573},
publisher = {Association for Computing Machinery},
