booktitle = {Proceedings of the 2022 CHI Conference on Human Factors in Computing Systems},
articleno = {228},
numpages = {16},
keywords = {Scratch, learning to code, online communities, social computing and social navigation, forums, informal learning, computational participation, computers and children, connected learning, creativity support tools},
