@inproceedings{10.1145/3411763.3451670,
author = {Kimani, Everlyne and Parmar, Dhaval and Murali, Prasanth and Bickmore, Timothy},
title = {Sharing the Load Online: Virtual Presentations with Virtual Co-Presenter Agents},
