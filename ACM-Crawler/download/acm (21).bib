@inproceedings{10.1145/3491102.3517573,
author = {Smith, Wally and Wadley, Greg and Webber, Sarah and Tag, Benjamin and Kostakos, Vassilis and Koval, Peter and Gross, James J.},
title = {Digital Emotion Regulation in Everyday Life},
year = {2022},
