articleno = {345},
numpages = {7},
keywords = {Computer supported cooperative work (CSCW), Hyperscanning, Remote collaboration, Eye gaze, Virtual Reality (VR), Brain synchronization, Inter-brain synchrony, Brain, Social neuroscience},
