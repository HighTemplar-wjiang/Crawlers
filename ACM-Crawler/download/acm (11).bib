@inproceedings{10.1145/3491101.3519675,
author = {Motahar, Tamanna and Ahmed, Nova},
title = {Exploring Technology Usage of Southeast Asian Elderly Women for Better Mental Health during COVID-19 Pandemic},
year = {2022},
