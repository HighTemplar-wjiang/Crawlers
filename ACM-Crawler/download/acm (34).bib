articleno = {629},
numpages = {14},
keywords = {Mourning and Memorialization, Thanato-sensitivity, Funeral, Death Rituals, 360-degree camera, Telepresence and Telexistence, Techno-spiritual practices},
location = {Yokohama, Japan},
series = {CHI '21}
}

@inproceedings{10.1145/3411764.3445603,
