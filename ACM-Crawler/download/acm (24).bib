}

@inproceedings{10.1145/3411764.3445116,
author = {Cha, Inha and Kim, Sung-In and Hong, Hwajung and Yoo, Heejeong and Lim, Youn-kyung},
title = {Exploring the Use of a Voice-Based Conversational Agent to Empower Adolescents with Autism Spectrum Disorder},
