}

@inproceedings{10.1145/3411764.3445123,
author = {Bhatia, Arpit and Kundu, Dhruv and Agarwal, Suyash and Kairon, Varnika and Parnami, Aman},
title = {Soma-Noti: Delivering Notifications Through Under-Clothing Wearables},
year = {2021},
