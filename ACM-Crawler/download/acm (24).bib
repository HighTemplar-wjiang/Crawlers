@inproceedings{10.1145/3411764.3445264,
author = {Lawo, Dennis and Neifer, Thomas and Esau, Margarita and Stevens, Gunnar},
title = {Buying the ‘Right’ Thing: Designing Food Recommender Systems with Critical Consumers},
year = {2021},
isbn = {9781450380966},
