@inproceedings{10.1145/3411763.3451775,
author = {Spitale, Micol and Silleresi, Silvia and Leonardi, Giulia and Arosio, Fabrizio and Giustolisi, Beatrice and Guasti, Maria Teresa and Garzotto, Franca},
