@inproceedings{10.1145/3411763.3451559,
author = {Stamhuis, Sjoerd and Brombacher, Hans and Vos, Steven and Lallemand, Carine},
title = {Office Agents: Personal Office Vitality Sensors with Intent},
year = {2021},
isbn = {9781450380959},
