}

@inproceedings{10.1145/3411763.3451587,
author = {Ghai, Bhavya and Hoque, Md Naimul and Mueller, Klaus},
title = {WordBias: An Interactive Visual Tool for Discovering Intersectional Biases Encoded in Word Embeddings},
